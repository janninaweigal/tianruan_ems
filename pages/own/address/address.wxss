page{
  width:100%;
  height:100%;
  background:#F8F8F8;
}
.addressContainer{
  width:100%;
}
.addressList{
  background:#fff;
  padding:10rpx 15rpx;
  margin:20rpx;
  border-radius:15rpx;
  border:1px solid #ccc;
  box-sizing:border-box;
  display:flex;
  flex-direction:column;
}
.top{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.middle{
  margin:10rpx 0rpx 20rpx 0rpx;
  padding:15rpx 0rpx;
  font-size:30rpx;
  border-bottom:1px solid #ccc;
}
.bottom{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.bottom .right{
  display: flex;
   flex-direction:row;
  justify-content:flex-start;
  align-items:center;
}
.bottom .right view{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items:center;
  margin-left:15rpx;
}
.bottom .right image{
  width:40rpx;
  height:40rpx;
  margin:0rpx 10rpx;
}
